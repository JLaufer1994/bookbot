{
  "name": "python-bookbot",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",

  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli": {},
    "ghcr.io/devcontainers/features/go:1": {},
    "ghcr.io/flexwie/devcontainer-features/op:1": {},
    "ghcr.io/jsburckhardt/devcontainer-features/uv:1": {},
    "ghcr.io/rocker-org/devcontainer-features/apt-packages:1": {
        "packages": "nala, lsd"
    },
    "ghcr.io/azutake/devcontainer-features/go-packages-install:0": {
        "packages": "github.com/bootdotdev/bootdev@latest"
    },
    "ghcr.io/devcontainers/features/common-utils:2": {
      "username": "vscode",
      "installZsh": false
    }
  },

  // Run after the container is created (not every start)
  "postCreateCommand": "pip install -U pip && if [ -f requirements.txt ]; then pip install -r requirements.txt; fi",

  // VS Code extensions to install automatically
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.black-formatter",
        "ms-python.isort",
        "ms-toolsai.jupyter"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.formatting.provider": "black",
        "[python]": {
          "editor.formatOnSave": true,
          "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
          }
        }
      }
    }
  },

  // Mount your local git config, etc. (optional)
  "mounts": [
    "source=${localEnv:HOME}/code-personal/.gitconfig,target=/home/vscode/.gitconfig,type=bind,consistency=cached"
  ],

  // User and shell
  "remoteUser": "vscode",

  // Forward common debug ports
  "forwardPorts": [8000, 8888]
}

